{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "PowerBI": {
    "ApiUrl": "https://api.powerbi.com",
    "AuthorityBaseUrl": "https://login.microsoftonline.com",
    "ResourceUrl": "https://analysis.windows.net/powerbi/api",

    "ClientId": "<Client ID>", // Azure Portal > Microsoft Entra ID > App Registrations > Application (client) ID
    "ClientSecret": "<Client Secret>", // Azure Portal > Microsoft Entra ID > App Registrations > Certificates & secrets
    "TenantId": "<Tenant ID>" // Azure Portal > Microsoft Entra ID > Overview > Tenant ID
  }
}
